  border:1px solid;
}
.topView {
  background-color: tan;
  position: absolute;
  top: 0;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.topKey {
 background-color: #d7eba0;
 font-size: 10px;
 color: black;
 width: 100%;
 height: 100%;
 text-align: center;
 border-style: solid;
 border-width: 1px;
 border-right-width: 0;
 }

.leftView {
  background-color: lawngreen;
  position: absolute;
  left: 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.leftKey {
 background-color: #d7eba0;
 font-size: 10px;
 color: black;
 width: 100%;
 height: 100%;
 text-align: center;
  border-style: solid;
  border-width: 1px;
  border-bottom-width: 0;
 }

.box {
  background-color: blue;
  position: absolute;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.leftBoxView {
  flex: 1;
  display: flex;
  justify-content: space-between;
}

.perBox {
  flex: 1;
  text-align: center;
  border-style: solid;
  border-width: 1px;
  border-right-width: 0;
  border-bottom-width: 0;
}

.select {
  position: absolute;
}